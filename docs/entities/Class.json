{
  "name": "Class",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Class name"
    },
    "description": {
      "type": "string"
    },
    "instructor_email": {
      "type": "string",
      "description": "Email of the instructor"
    },
    "instructor_name": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "start_time": {
      "type": "string"
    },
    "end_time": {
      "type": "string"
    },
    "level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced",
        "all_levels"
      ]
    },
    "max_students": {
      "type": "number",
      "default": 20
    },
    "enrolled_students": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of student emails"
    }
  },
  "required": [
    "title",
    "instructor_email",
    "date",
    "start_time"
  ]
}